{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Vite + React Debugging",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/src",
            "breakOnLoad": true,
            "sourceMapPathOverrides": {
                "webpack://src/*": "${webRoot}/*"
            }
        }
    ]
}